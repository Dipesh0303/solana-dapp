    <script>
        const listings = [
            { id: 1, title: "Modern Downtown Loft", location: "New York, NY", price: "$125/night", description: "Stay in this stylish loft in the heart of downtown." },
            { id: 2, title: "Beachfront Villa", location: "Malibu, CA", price: "$350/night", description: "Enjoy ocean views from your private villa." },
            { id: 3, title: "Mountain Cabin", location: "Aspen, CO", price: "$220/night", description: "Cozy cabin with stunning mountain views." },
            { id: 4, title: "Historic Brownstone", location: "Boston, MA", price: "$180/night", description: "Stay in this beautifully restored historic home." },
            { id: 5, title: "Luxury Penthouse", location: "Miami, FL", price: "$420/night", description: "Modern penthouse with rooftop terrace." },
            { id: 6, title: "Garden Studio", location: "Portland, OR", price: "$110/night", description: "Peaceful studio with garden views." }
        ];

        function showDetails(id) {
            const listing = listings.find(item => item.id === id);
            document.getElementById('details-title').textContent = listing.title;
            document.getElementById('details-price').textContent = listing.price;
            document.getElementById('details-location').textContent = listing.location;
            document.getElementById('details-description').textContent = listing.description;
            document.getElementById('details-img').src = "https://placehold.co/600x400"; // Placeholder image
            document.getElementById('home-page').style.display = 'none';
            document.getElementById('details-page').style.display = 'block';
        }

        document.getElementById('back-to-home').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('details-page').style.display = 'none';
            document.getElementById('home-page').style.display = 'block';
        });

        document.getElementById('book-from-details').addEventListener('click', function() {
            document.getElementById('details-page').style.display = 'none';
            document.getElementById('login-page').style.display = 'block';
        });

        document.getElementById('login-link').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('home-page').style.display = 'none';
            document.getElementById('login-page').style.display = 'block';
        });

        document.getElementById('submit-login').addEventListener('click', function(e) {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            if (email && password.length >= 6) {
                document.getElementById('login-page').style.display = 'none';
                document.getElementById('confirmation-page').style.display = 'block';
                document.getElementById('booking-details').textContent = `You've successfully booked ${document.getElementById('details-title').textContent}.`;
            } else {
                document.querySelector('.error-message').style.display = 'block';
            }
        });

        document.getElementById('confirmation-home-link').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('confirmation-page').style.display = 'none';
            document.getElementById('home-page').style.display = 'block';
        });
    </script>
</body>
